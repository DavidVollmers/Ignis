@typeparam TValue

<input type="@(Context.Attributes["type"] ?? "text")" class="form-control" @bind-value="CurrentValue"
       id="@Context.PropertyInfo?.Name"/>

@code
{
    [CascadingParameter]
    public InputFragmentContext<TValue> Context { get; set; } = null!;

    private TValue? CurrentValue
    {
        get => Context.Value;
        set => Context.OnInputAsync(value);
    }
}