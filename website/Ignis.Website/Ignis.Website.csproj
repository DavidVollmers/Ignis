<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <PackageId>Ignis.Website</PackageId>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LoxSmoke.DocXml" Version="3.5.0" />
    <PackageReference Include="Microsoft.Extensions.Localization" Version="7.0.9" />
    <PackageReference Include="Microsoft.Extensions.Localization.Abstractions" Version="7.0.9" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\packages\Ignis.Utils\Ignis.Utils.csproj" />
    <ProjectReference Include="..\..\packages\Tailwind\Ignis.Components.HeadlessUI\Ignis.Components.HeadlessUI.csproj" />
    <ProjectReference Include="..\..\packages\Tailwind\Ignis.Components.HeroIcons\Ignis.Components.HeroIcons.csproj" />
    <ProjectReference Include="..\..\tools\Ignis.Markdown.Processor.Contracts\Ignis.Markdown.Processor.Contracts.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\CommonResources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>CommonResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\CommonResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CommonResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Examples\HeadlessUI\ListboxExampleCode.razor">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="Examples\HeadlessUI\TransitionExampleCode.razor">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="Examples\HeadlessUI\TabsExampleCode.razor">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="Examples\HeadlessUI\DialogExampleCode.razor">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="package.json">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </Content>
    <Content Update="package-lock.json">
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Components\Icons\GitHubIcon.razor" />
    <AdditionalFiles Include="Components\Icons\ThemeDarkIcon.razor" />
    <AdditionalFiles Include="Components\Icons\ThemeLightIcon.razor" />
    <AdditionalFiles Include="Components\Icons\ThemeSystemIcon.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\DialogExample.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\DialogExampleCode.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\ListboxExample.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\ListboxExampleCode.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\TabsExample.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\TabsExampleCode.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\TransitionExample.razor" />
    <AdditionalFiles Include="Examples\HeadlessUI\TransitionExampleCode.razor" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run build" />
  </Target>

</Project>
