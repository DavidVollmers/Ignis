<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ignis.Components.HeadlessUI" Version="1.0.0-rc"/>
    <PackageReference Include="Ignis.Components.HeroIcons" Version="1.0.0-rc"/>
    <PackageReference Include="Ignis.Components.WebAssembly" Version="1.0.0-rc"/>
    <PackageReference Include="Ignis.Utils" Version="1.0.0-rc"/>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.0"/>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.0" PrivateAssets="all"/>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run build"/>
  </Target>

</Project>