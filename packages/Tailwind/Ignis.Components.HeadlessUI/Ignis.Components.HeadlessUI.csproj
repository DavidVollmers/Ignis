<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Ignis.Components.HeadlessUI</PackageId>
    <Authors>david@vollmers.org</Authors>
    <Copyright>David Vollmers</Copyright>
    <Description>Completely unstyled, fully accessible UI components, designed to integrate beautifully with Tailwind CSS</Description>
    <PackageProjectUrl>https://github.com/DavidVollmers/Ignis/tree/master/packages/Tailwind/Ignis.Components.HeadlessUI</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DavidVollmers/Ignis.git</RepositoryUrl>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <LangVersion>11</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageOutputPath>..\..\..\nuget</PackageOutputPath>
    <NoWarn>BL0007</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Ignis.Components.Web\Ignis.Components.Web.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\..\LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
