<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Ignis</PackageId>
    <Authors>david@vollmers.org</Authors>
    <Copyright>David Vollmers</Copyright>
    <Description>The ASP.NET component framework for building modern web applications</Description>
    <PackageProjectUrl>https://github.com/DavidVollmers/Ignis</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/DavidVollmers/Ignis.git</RepositoryUrl>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <LangVersion>11</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenreatePackageOnBuild>false</GenreatePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>